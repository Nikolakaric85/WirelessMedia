@model IEnumerable<Products>
@{
    ViewData["Title"] = "Wirelles Media";
}


<div>
    <a class="btn btn-outline-primary" asp-controller="Home" asp-action="AddEditProducts">Add Product</a>
</div>

<br />
<br />

@if (Model.Any())
{
    <table class="table table-hover">
        <thead>
            <tr>

                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Category</th>
                <th scope="col">Manufacturer</th>
                <th scope="col">Supplier</th>
                <th scope="col">Price</th>
                <th scope="col">Actions</th>

            </tr>
        </thead>

        @foreach (var product in Model)
        {
            <tbody>
                <tr>

                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Category</td>
                    <td>@product.Manufacturer</td>
                    <td>@product.Supplier</td>
                    <td>@product.Price</td>
                    
                    <td><a class="btn btn-outline-primary" asp-controller="Home" asp-action="EditProducts" asp-route-id="@product.Id" role="button">Edit</a>
                    <a class="btn btn-outline-danger" asp-controller="Home" asp-action="DeleteProduct" asp-route-id="@product.Id" role="button">Delete</a></td>
                </tr>
            </tbody>
        }
    </table>
}
else
{
    <p>No data</p>
}

